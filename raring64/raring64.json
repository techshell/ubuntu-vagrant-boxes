{
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"scripts/base.sh",
				"scripts/vagrant.sh",
				"scripts/virtualbox.sh",
				"scripts/chef.sh",
				"scripts/cleanup.sh"
			],
			"override": {
				"virtualbox": {
					"execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
				}
			}
		}
	],
	"builders": [
		{
			"type": "virtualbox",
			"boot_command": [
				"<esc><esc><enter><wait>",
				"/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
				"debian-installer=en_US auto locale=en_GB kbd-chooser/method=uk <wait>",
				"hostname=raring64 <wait>",
				"fb=false debconf/frontend=noninteractive <wait>",
				"keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=UK keyboard-configuration/variant=UK console-setup/ask_detect=false <wait>",
				"initrd=/install/initrd.gz -- <enter><wait>"
			],
			"boot_wait": "4s",
			"disk_size": 10140,
			"guest_os_type": "Ubuntu_64",
			"http_directory": "http",
			"iso_checksum": "edf1194d7bc99b64dca177deecade9e13f0a8c3339c9fd8832471a2e7ed1dda5",
			"iso_checksum_type": "sha256",
			"iso_url": "http://releases.ubuntu.com/13.04/ubuntu-13.04-server-amd64.iso",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"virtualbox_version_file": ".vbox_version",
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"512"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"1"
				]
			]
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "../build/raring64.box",
			"vagrantfile_template": "scripts/Vagrantfile"
		}
	]
}